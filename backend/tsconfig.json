{
  "compilerOptions": {
    "target": "ESNext", // or keep it as "ES2022" if that works for you
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"] // Add this line
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}